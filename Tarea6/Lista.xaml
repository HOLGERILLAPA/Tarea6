<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea6.Lista">
           
    <ContentPage.Content>
        <StackLayout Spacing="14">
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el Codigo" IsReadOnly="True" Keyboard="Numeric" />
            <Entry x:Name="txtNombre" Placeholder=" Ingrese el Nombre" Keyboard="Text"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el Apellido" Keyboard="Text" />
            <Entry x:Name="txtEdad" Placeholder="Ingrese la Edad" Keyboard="Numeric"/>

           
                <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"  />
            <Button x:Name="bntElminar" Text="Eliminar" Clicked="bntElminar_Clicked"  />
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>